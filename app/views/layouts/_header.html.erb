<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Spoiler", root_path, class: "brand" %>
      <ul class="nav pull-left">    
        <li>
          <a href="<%= help_path %>">
            <i class="icon-question-sign icon-white" style="opacity: 0.6; margin-right:3px;"></i>Help
          </a>
        </li>
        <li>
          <a href="<%= about_path %>">
            <i class="icon-globe icon-white" style="opacity: 0.6; margin-right:3px;"></i>About
          </a>
        </li>
        <% if !signed_in? %>
          <li><%= link_to "Search", exam_papers_search_path %></li>
        <% end %>
        <!-- logo thay cho nut home -->
      </ul>
      <ul class="nav pull-right">
        <% if signed_in? %>
          <li>
            <a href="<%= exam_papers_search_path %>">
              <i class="icon-search icon-white" style="opacity: 0.6; margin-right:3px;"></i>
              Search
            </a>
          </li>
          <li>
            <a href="<%= new_exam_paper_path %>">
              <i class="icon-upload icon-white" style="opacity: 0.6; margin-right:3px;"></i>
              Upload
            </a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-user icon-white" style="opacity: 0.6; margin-right:3px;"></i><%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "My page", current_user %></li>
              <li class="divider"></li>
              <% if current_user.admin? %>
                <li><%= link_to "Users", users_path %></li>
                <li><%= link_to "Exam Papers", exam_papers_path %></li>
                <li class="divider"></li>
              <% end %>          
              <li>
                <%= link_to "Sign out", signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= form_for :session, url: sessions_path, html: {class: "navbar-form pull-left"} do |f| %>
            <%= f.text_field :email, placeholder: "Email", class: "span2" %>

            <%= f.password_field :password, placeholder: "Password" ,class: "span2" %>

            <%= f.submit "Sign in", class: "btn" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>