<% if !@results.empty? %>
  <table class="table table-hover">
    <thead>
      <th>Name</th>
      <th>Course</th>
      <th class="usable" id="order-by-time">&#9660; Date</th>
      <th>Report</th>
      <th class="usable" id="order-by-good">&#9660; Appreciates</th>
    </thead>

    <tbody>
      <% @results.each do |r| %>
      <tr>
        <td><%= r.lecturer.name %></td>
        <td><%= r.course.name %></td>
        <td><%= r.exam_date %></td>
        <td><%= r.reports.count %></td>
        <td><%= r.appreciates.count %></td>
        <td><%= link_to "Browse", exam_paper_path(r) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @results, class: "pagination pagination-centered" %>
<% else %>
  <p>No exam paper found.</p>
<% end %>

<script type="text/javascript">
$(".pagination li a").attr('data-remote', 'true');
$("#order-by-time").click(function() {
  $("#sort_order_time").prop('checked',true);
  $("#search-submit").click();
});
$("#order-by-good").click(function() {
  $("#sort_order_good").prop('checked',true);
  $("#search-submit").click();
});
</script>