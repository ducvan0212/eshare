<%= provide(:title, "Sign up") %>
<div class="container">
  <h1>Sign up</h1>
  <div class="row">
    <div class="span6 offset3">
      <%= form_for @user, html: {multipart: true} do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name %> 

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
        
        <%= f.label :avatar %>
        <div class="avatar-area">
          <div id="avatar-preview" style="background: url('<%= @user.avatar.url(:thumb)%>')">
          </div>
          <div id="upload-avatar-btn">
            <div class="btn btn-large btn-primary">Chose a photo</div>
            <%= f.file_field :avatar, :accept => 'image/png,image/jpeg', id: "upload-avatar-file-field", onchange: "readURL(this)" %>
          </div>
        </div>
        
        <%= f.submit "Create my account", class: "btn btn-large btn-primary width100" %>
      <% end %>
      <div>Back to <%= link_to "Sign in", root_path %></div>
    </div>
  </div>
</div>