<div class="a-comment" style="display: inline-block;">
  <div class="preview avatar-in-comment" style="background: url('<%= comment.user.avatar.url(:thumb)%>')">
  </div>
  <div class="comment-content">
    <%= link_to comment.user.name, user_path(comment.user), id: "owner" %>
    <%= comment.content %>
    <div style="font-size: 12px;">Posted <%= time_ago_in_words(comment.created_at) %> ago.
      <% if current_user == comment.user %>
      <%= link_to 'Delete', comment_path(comment),
      confirm: 'Are you sure?', :method => :delete, 
      remote: true %>
      <% end %>
    </div>
  </div>

  
</div>