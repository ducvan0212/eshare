<%= provide(:title, "Home") %>
<div class="container">

  <% if !signed_in? %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span8">
          afldsfkd
        </div>  

        <div class="span4">
          <h1>Sign up</h1>
          <%= form_for @user, html: {multipart: true} do |f| %>
            <%= render partial: 'shared/error_messages', locals: {obj: @user} %>

            <%= f.label :name %>
            <%= f.text_field :name %> 

            <%= f.label :email %>
            <%= f.text_field :email %>

            <%= f.label :password %>
            <%= f.password_field :password %>

            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation %>
            
            <%= f.submit "Create my account", class: "btn btn-large btn-primary width100" %>
          <% end %>
        </div>
      </div>
    </div>
  
  <% else %>
    <%= form_tag exam_papers_search_path, method: :get do %>
      <%= select_tag "lecturer", options_from_collection_for_select(Lecturer.all, "id", "name"), include_blank: true %>
      <%= select_tag "course", options_from_collection_for_select(Course.all, "id", "name"), include_blank: true %>
      <%= submit_tag "Search", class: "btn btn-large btn-primary" %>
    <% end %>
  <% end %>
</div>